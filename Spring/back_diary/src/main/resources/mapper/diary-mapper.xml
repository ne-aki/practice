<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 해당 파일에 모든 쿼리문을 작성 -->
<!-- namespace에는 xml파일과 연결할 Mapper interface 파일명을 패키지를 포함하여 적어주세요 -->
<mapper namespace="com.home.back_diary.diary.mapper.DiaryMapper">
	<resultMap id="diary" type="com.home.back_diary.diary.dto.DiaryDTO">
		<id column="DIARY_NUM" property="diaryNum" />
		<result column="DIARY_DATE" property="diaryDate" />
		<result column="FEELING" property="feeling" />
		<result column="TITLE" property="title" />
		<result column="CONTENT" property="content" />
	</resultMap>
	<!--다이어리 추가-->
	<insert id="addNewDiary">
		INSERT INTO DIARY (
			DIARY_DATE
			, FEELING
			, TITLE
			, CONTENT
		) VALUES (
			#{diaryDate}
			, #{feeling}
			, #{title}
			, #{content}
		)
	</insert>
	<!--다이어리 목록 조회-->
	<select id="getDiaryList" resultMap="diary">
		SELECT
			DIARY_NUM
			, DIARY_DATE
			, FEELING
			, TITLE
			, CONTENT
		FROM DIARY
		ORDER BY DIARY_DATE DESC
	</select>
	<!--하나의 다이어리 조회-->
	<select id="getDiaryDetail" resultMap="diary">
		SELECT
			DIARY_NUM
			, DIARY_DATE
			, FEELING
			, TITLE
			, CONTENT
		FROM DIARY
		WHERE DIARY_NUM = #{diaryNum}
	</select>
</mapper>































